{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "plugins": ["react"],

  "rules": {
    "react/require-default-props": 0,
    "react/prefer-stateless-function": 1,
    "react/forbid-prop-types": 0,
    "react/prop-types": 0,

    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["warn", "unix"],

    "no-extra-strict": 0,
    "strict": 1,
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-nested-ternary": 1
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",

      "pragma": "React",
      "version": "16.6.3"
    },
    "propWrapperFunctions": [ "forbidExtraProps" ]
  }
}
